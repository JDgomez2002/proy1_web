{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended", 
    "plugin:react/jsx-runtime",
    "airbnb",
    "airbnb/rules/react"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "never"],
    "react/react-in-jsx-scope": "off",
    "comma-dangle": ["error", "always"],
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "single"],
    "prefer-const": "error",
    "no-console": "off"
  }
}
